<p id="notice"><%= notice %></p>

<h1>Events</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Theme</th>
      <th>Date</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.theme %></td>
        <td><%= event.date %></td>
        <td><%= event.company.name %></td>
        <td><%= link_to 'Show', company_event_path(@company, event) %></td>
        <td><%= link_to 'Edit', edit_company_event_path(@company, event) %></td>
        <td><%= link_to 'Destroy', company_event_path(@company, event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_company_event_path %>
<%= link_to 'Back', company_path(@company) %>
