<p id="notice"><%= notice %></p>
<div class="container col">
  <h1 class="jumbotron p-1">Workers</h1>

  <div class="m-1 p-1">
    <%= link_to 'Add New Worker',  new_company_worker_path, class: 'btn btn-primary' %>
  </div>
</div>

<div class="container col">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @workers.each do |worker| %>
        <tr>
          <td><%= worker.name %></td>
          <td><%= link_to 'Show', company_worker_path(@company, worker), class:'btn btn-outline-info btn-sm' %></td>
          <td><%= link_to 'Edit', edit_company_worker_path(@company, worker), class:'btn btn-outline-dark btn-sm' %></td>
          <td><%= link_to 'Destroy', company_worker_path(@company, worker), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-warning btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<%= link_to 'Back', company_path(@company), class: 'btn btn-secondary m-1'  %>
