<p id="notice"><%= notice %></p>

<h1>Workers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rut</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.rut %></td>
        <td><%= worker.company.name %></td>
        <td><%= link_to 'Show', company_worker_path(@company, worker) %></td>
        <td><%= link_to 'Edit', edit_company_worker_path(@company, worker) %></td>
        <td><%= link_to 'Destroy', company_worker_path(@company, worker), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

